---
/**
 * Site Header with navigation
 * Terminal Noir style with dashed separator
 */

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/tags/', label: 'Tags' },
];
---

<header class="site-header">
  <div class="header-inner">
    <a href="/" class="logo" aria-label="WhyNot.Fail">
      <pre class="ascii-logo" aria-hidden="true">{`
 █   █ █ █ █ █ █▄ █ █▀█ ▀█▀
 █▄█▄█ █▀█ ▀█▀ █ ▀█ █▄█  █
        ·FAIL·
      `}</pre>
      <span class="logo-tagline">// cause_when_you_fail_somebody_has_to_laugh_at_you</span>
    </a>

    <div class="header-actions">
      <nav class="nav-main" aria-label="Main navigation">
        <ul class="nav-list">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={['nav-link', { active: currentPath === item.href }]}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="search-shell" data-search-trigger>
        <input
          type="search"
          class="search-trigger"
          placeholder="Search"
          aria-label="Open search"
          readonly
        />
        <span class="search-shortcut">Ctrl+K</span>
      </div>
    </div>
  </div>

  <div class="header-separator" aria-hidden="true"></div>
</header>

<style>
  .site-header {
    padding: 1.5rem 0 0;
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
    text-decoration: none;
  }

  .ascii-logo {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    line-height: 1.1;
    color: var(--color-text);
    margin: 0;
    white-space: pre;
  }

  .logo-tagline {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-main {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .search-shell {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.5rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    cursor: pointer;
  }

  .search-trigger {
    width: 140px;
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    font-family: "JetBrains Mono", monospace;
    font-size: 0.75rem;
    pointer-events: none;
  }

  .search-shell:hover {
    border-color: var(--color-accent);
  }

  .search-shell:hover .search-trigger {
    color: var(--color-text);
  }

  .search-shortcut {
    padding: 0.1rem 0.35rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  .js-enabled .search-shell {
    display: inline-flex;
  }

  @media (max-width: 720px) {
    .search-shortcut {
      display: none;
    }
  }

  .nav-link {
    display: block;
    padding: 0.5rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-surface);
  }

  .nav-link.active {
    color: var(--color-accent);
  }


  .header-separator {
    margin-top: 1.5rem;
    height: 1px;
    background: repeating-linear-gradient(
      90deg,
      var(--color-border) 0,
      var(--color-border) 4px,
      transparent 4px,
      transparent 8px
    );
  }
</style>
