---
/**
 * Site Header with navigation
 * Pixel Punk style with scanline overlay on header
 */
import Icon from './Icon.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/', label: 'HOME' },
  { href: '/about/', label: 'ABOUT' },
  { href: '/tags/', label: 'TAGS' },
];
---

<header class="site-header">
  <div class="header-bg">
    <div class="scanlines" aria-hidden="true"></div>
  </div>
  
  <div class="header-inner">
    <a href="/" class="logo">
      <img src="/img/logo.png" alt="WhyNot.Fail" class="logo-img" />
      <span class="logo-text">WhyNot<span class="logo-dot">.</span>Fail</span>
    </a>
    
    <nav class="nav-main" aria-label="Main navigation">
      <ul class="nav-list">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class:list={['nav-link', { active: currentPath === item.href }]}
            >
              <span class="nav-bracket">[</span>
              {item.label}
              <span class="nav-bracket">]</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <p class="slogan">// why_not_fail?</p>
  </div>
</header>

<style>
  .site-header {
    position: relative;
    padding: 1.5rem 0;
    overflow: hidden;
  }

  .header-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, var(--color-surface) 0%, var(--color-bg) 100%);
    z-index: -1;
  }

  .scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.15) 2px,
      rgba(0, 0, 0, 0.15) 4px
    );
    pointer-events: none;
    opacity: 0.6;
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-img {
    width: 40px;
    height: 40px;
    border: 2px solid var(--color-border);
    image-rendering: pixelated;
  }

  .logo-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .logo-dot {
    color: var(--color-accent);
  }

  .nav-main {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .nav-bracket {
    color: var(--color-border);
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: var(--color-text);
  }

  .nav-link:hover .nav-bracket {
    color: var(--color-accent);
  }

  .nav-link.active {
    color: var(--color-accent);
  }

  .nav-link.active .nav-bracket {
    color: var(--color-accent);
  }

  .slogan {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
    display: none;
  }

  @media (min-width: 768px) {
    .slogan {
      display: block;
    }
  }
</style>
