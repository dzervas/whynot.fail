---
/**
 * Horizontal Post Card for homepage
 * Pixel Punk style with retro tech aesthetic
 */
import type { CollectionEntry } from 'astro:content';
import TagList from './TagList.astro';
import BuildBadge from './BuildBadge.astro';

interface Props {
  post: CollectionEntry<'posts'>;
  index: number;
}

const { post, index } = Astro.props;
const { title, date, tags, build_status, image, description, writer } = post.data;

const formattedDate = date.toLocaleDateString('en-GB', {
  day: '2-digit',
  month: 'short',
  year: '2-digit',
});

// Alternate layout direction
const isReversed = index % 2 === 1;
---

<article class:list={['post-card', { reversed: isReversed }]}>
  {image && (
    <div class="post-card-image">
      <a href={`/posts/${post.slug}/`}>
        <img src={image} alt={title} loading="lazy" />
        <div class="scanline-overlay" aria-hidden="true"></div>
      </a>
    </div>
  )}
  <div class="post-card-content">
    <header class="post-card-header">
      <div class="post-card-meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span class="meta-dot"></span>
        <span class="post-card-author">{writer}</span>
        {build_status && (
          <>
            <span class="meta-dot"></span>
            <BuildBadge status={build_status} />
          </>
        )}
      </div>
      <h2 class="post-card-title">
        <a href={`/posts/${post.slug}/`}>{title}</a>
      </h2>
    </header>
    
    {description && (
      <p class="post-card-excerpt">{description}</p>
    )}
    
    <footer class="post-card-footer">
      <TagList tags={tags} />
      <a href={`/posts/${post.slug}/`} class="read-more">
        <span>READ_MORE</span>
        <span class="arrow">&gt;&gt;</span>
      </a>
    </footer>
  </div>
  
  <!-- Pixel corner decorations -->
  <div class="pixel-corner pixel-corner-tl" aria-hidden="true"></div>
  <div class="pixel-corner pixel-corner-br" aria-hidden="true"></div>
</article>

<style>
  .post-card {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 2rem;
    margin-bottom: 1.5rem;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
  }

  @media (min-width: 768px) {
    .post-card {
      grid-template-columns: 1fr 1.2fr;
      gap: 2rem;
    }

    .post-card.reversed {
      direction: rtl;
    }

    .post-card.reversed > * {
      direction: ltr;
    }
  }

  /* Pixel corners */
  .pixel-corner {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--color-accent);
  }

  .pixel-corner-tl {
    top: -2px;
    left: -2px;
  }

  .pixel-corner-br {
    bottom: -2px;
    right: -2px;
  }

  .post-card-image {
    position: relative;
    overflow: hidden;
    background: var(--color-bg);
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 16/10;
    transition: transform 0.3s ease;
  }

  .scanline-overlay {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.1) 2px,
      rgba(0, 0, 0, 0.1) 4px
    );
    pointer-events: none;
    opacity: 0.5;
  }

  .post-card-image:hover img {
    transform: scale(1.02);
  }

  .post-card-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .post-card-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    font-family: 'JetBrains Mono', monospace;
  }

  .meta-dot {
    width: 4px;
    height: 4px;
    background: var(--color-accent);
  }

  .post-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0.5rem 0 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .post-card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .post-card-title a:hover {
    color: var(--color-accent);
  }

  .post-card-excerpt {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  .post-card-footer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .read-more {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border: 2px solid var(--color-accent);
    transition: all 0.15s ease;
  }

  .read-more:hover {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  .read-more .arrow {
    transition: transform 0.15s ease;
  }

  .read-more:hover .arrow {
    transform: translateX(2px);
  }
</style>
