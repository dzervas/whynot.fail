---
/**
 * Icon component using Lucide icons
 * No JavaScript required - pure static SVG
 */
import { icons } from 'lucide';

const ICON_ALIASES: Record<string, keyof typeof icons> = {
  home: 'Home',
  user: 'User',
  tag: 'Tag',
  calendar: 'Calendar',
  github: 'Github',
  rss: 'Rss',
  mail: 'Mail',
  'external-link': 'ExternalLink',
  menu: 'Menu',
  x: 'X',
  check: 'Check',
  'alert-triangle': 'AlertTriangle',
  info: 'CircleHelp',
  'alert-circle': 'AlertCircle',
  'chevron-right': 'ChevronRight',
  'arrow-left': 'ArrowLeft',
};

interface Props {
  name: keyof typeof ICON_ALIASES | 'mastodon';
  size?: number;
  class?: string;
}

const { name, size = 24, class: className = '' } = Astro.props;

const mastodonSvg = `<svg xmlns="http://www.w3.org/2000/svg" width="${size}" height="${size}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-mastodon ${className}"><path d="M21.327 8.566c0-4.339-2.843-5.61-2.843-5.61-1.433-.658-3.894-.935-6.451-.956h-.063c-2.557.021-5.016.298-6.45.956 0 0-2.843 1.272-2.843 5.61 0 .993-.019 2.181.012 3.441.103 4.243.778 8.425 4.701 9.463 1.809.479 3.362.579 4.612.51 2.268-.126 3.541-.809 3.541-.809l-.075-1.646s-1.621.511-3.441.449c-1.804-.062-3.707-.194-3.999-2.409a4.523 4.523 0 0 1-.04-.621s1.77.432 4.014.535c1.372.063 2.658-.08 3.965-.236 2.506-.299 4.688-1.843 4.962-3.254.434-2.223.398-5.424.398-5.424zm-3.353 5.59h-2.081V9.057c0-1.075-.452-1.62-1.357-1.62-1 0-1.501.647-1.501 1.927v2.791h-2.069V9.364c0-1.28-.501-1.927-1.502-1.927-.905 0-1.357.546-1.357 1.62v5.099H6.026V8.903c0-1.074.273-1.927.823-2.558.566-.631 1.307-.955 2.228-.955 1.065 0 1.872.41 2.405 1.228l.518.869.519-.869c.533-.818 1.34-1.228 2.405-1.228.92 0 1.662.324 2.228.955.549.631.822 1.484.822 2.558z"/></svg>`;

const iconParts = name === 'mastodon'
  ? null
  : icons[ICON_ALIASES[name]];

const iconMarkup = name === 'mastodon'
  ? mastodonSvg
  : iconParts
      .map(([tag, attrs]) => {
        const attrString = Object.entries(attrs)
          .map(([key, value]) => `${key}="${value}"`)
          .join(' ');
        return `<${tag} ${attrString}></${tag}>`;
      })
      .join('');

const svg = name === 'mastodon'
  ? iconMarkup
  : `<svg xmlns="http://www.w3.org/2000/svg" width="${size}" height="${size}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-${name} ${className}">${iconMarkup}</svg>`;
---

<Fragment set:html={svg} />
