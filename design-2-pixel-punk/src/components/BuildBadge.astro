---
/**
 * CI Build Badge component
 * Pixel Punk style: Pixel-art inspired badges
 */
interface Props {
  status?: 'passing' | 'failing' | 'unknown';
}

const { status = 'unknown' } = Astro.props;

const statusConfig = {
  passing: { text: 'PASS', class: 'badge-passing', icon: '+' },
  failing: { text: 'FAIL', class: 'badge-failing', icon: 'x' },
  unknown: { text: '???', class: 'badge-unknown', icon: '?' },
};

const config = statusConfig[status];
---

<span class:list={['build-badge', config.class]}>
  <span class="badge-icon">{config.icon}</span>
  <span class="badge-text">{config.text}</span>
</span>

<style>
  .build-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    border: 2px solid;
    /* Pixelated border effect */
    image-rendering: pixelated;
  }

  .badge-icon {
    font-size: 0.875rem;
    font-weight: 700;
  }

  .badge-passing {
    background: var(--color-success-bg);
    border-color: var(--color-success);
    color: var(--color-success);
  }

  .badge-failing {
    background: var(--color-danger-bg);
    border-color: var(--color-danger);
    color: var(--color-danger);
  }

  .badge-unknown {
    background: var(--color-warning-bg);
    border-color: var(--color-warning);
    color: var(--color-warning);
  }
</style>
