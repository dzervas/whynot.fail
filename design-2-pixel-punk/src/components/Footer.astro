---
/**
 * Site Footer with social links
 * Pixel Punk style with ASCII art logo
 */
import Icon from './Icon.astro';

const socialLinks = [
  { href: 'https://kafeneio.social/@dzervas', icon: 'mastodon' as const, label: 'MASTODON' },
  { href: 'https://github.com/dzervas/whynot.fail', icon: 'github' as const, label: 'GITHUB' },
  { href: '/rss.xml', icon: 'rss' as const, label: 'RSS' },
];

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-border" aria-hidden="true">
    <span class="border-line"></span>
    <span class="border-dot"></span>
    <span class="border-line"></span>
  </div>
  
  <div class="footer-inner">
    <div class="footer-main">
      <div class="footer-brand">
        <pre class="ascii-logo" aria-hidden="true">{`
 █   █ █ █ █ █ █▄ █ █▀█ ▀█▀
 █▄█▄█ █▀█ ▀█▀ █ ▀█ █▄█  █ 
        ·FAIL·
        `}</pre>
        <p class="footer-tagline">// cause_when_you_fail_somebody_has_to_laugh</p>
      </div>
      
      <nav class="footer-social" aria-label="Social links">
        <ul class="social-list">
          {socialLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="social-link"
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              >
                <Icon name={link.icon} size={18} />
                <span class="social-label">{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} DIMITRIS_ZERVAS
      </p>
      <p class="version">v2.0.0_PIXEL_PUNK</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: auto;
    padding-bottom: 2rem;
  }

  .footer-border {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    padding: 0 var(--gutter);
    max-width: var(--max-width);
    margin-left: auto;
    margin-right: auto;
  }

  .border-line {
    flex: 1;
    height: 2px;
    background: var(--color-border);
  }

  .border-dot {
    width: 8px;
    height: 8px;
    background: var(--color-accent);
  }

  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
  }

  .footer-main {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-brand {
    flex: 1;
    min-width: 200px;
  }

  .ascii-logo {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    line-height: 1.2;
    color: var(--color-accent);
    margin: 0 0 0.5rem;
    opacity: 0.8;
  }

  .footer-tagline {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .social-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid transparent;
    transition: all 0.15s ease;
  }

  .social-link:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .social-label {
    display: none;
  }

  @media (min-width: 640px) {
    .social-label {
      display: inline;
    }
  }

  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 2px solid var(--color-border);
  }

  .copyright {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .version {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    color: var(--color-border);
    margin: 0;
  }
</style>
