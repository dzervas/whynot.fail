---
/**
 * Site Header with navigation
 * Midnight Editorial style - elegant and refined
 */
import Icon from './Icon.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/tags/', label: 'Tags' },
];
---

<header class="site-header">
  <div class="header-inner">
    <a href="/" class="logo">
      <img src="/img/logo.png" alt="WhyNot.Fail" class="logo-img" />
      <div class="logo-text">
        <span class="logo-name">WhyNot.Fail</span>
        <span class="logo-tagline">Why not fail?</span>
      </div>
    </a>
    
    <nav class="nav-main" aria-label="Main navigation">
      <ul class="nav-list">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class:list={['nav-link', { active: currentPath === item.href }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
  
  <div class="header-rule" aria-hidden="true">
    <span class="rule-line"></span>
    <span class="rule-ornament"></span>
    <span class="rule-line"></span>
  </div>
</header>

<style>
  .site-header {
    padding: 2rem 0 0;
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .logo-img {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .logo-name {
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .logo-tagline {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .nav-main {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: block;
    padding: 0.625rem 1.125rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-surface);
  }

  .nav-link.active {
    color: var(--color-accent);
  }

  .header-rule {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding: 0 var(--gutter);
    max-width: var(--max-width);
    margin-left: auto;
    margin-right: auto;
  }

  .rule-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .rule-ornament {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    opacity: 0.7;
  }
</style>
