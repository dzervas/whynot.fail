---
/**
 * Site Footer with social links
 * Midnight Editorial style - elegant and refined
 */
import Icon from './Icon.astro';

const socialLinks = [
  { href: 'https://kafeneio.social/@dzervas', icon: 'mastodon' as const, label: 'Mastodon' },
  { href: 'https://github.com/dzervas/whynot.fail', icon: 'github' as const, label: 'GitHub' },
  { href: '/rss.xml', icon: 'rss' as const, label: 'RSS' },
];

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-rule" aria-hidden="true">
    <span class="rule-line"></span>
    <span class="rule-ornament"></span>
    <span class="rule-line"></span>
  </div>
  
  <div class="footer-inner">
    <div class="footer-main">
      <div class="footer-brand">
        <h2 class="footer-title">WhyNot.Fail</h2>
        <p class="footer-tagline">Cause when you fail, somebody has to laugh at you</p>
      </div>
      
      <nav class="footer-social" aria-label="Social links">
        <ul class="social-list">
          {socialLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="social-link"
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                aria-label={link.label}
              >
                <Icon name={link.icon} size={20} />
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} Dimitris Zervas. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: auto;
    padding-bottom: 2.5rem;
  }

  .footer-rule {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2.5rem;
    padding: 0 var(--gutter);
    max-width: var(--max-width);
    margin-left: auto;
    margin-right: auto;
  }

  .rule-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .rule-ornament {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    opacity: 0.7;
  }

  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
  }

  .footer-main {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-brand {
    flex: 1;
    min-width: 200px;
  }

  .footer-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
    font-style: italic;
  }

  .social-list {
    display: flex;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    color: var(--color-accent);
    background: var(--color-surface);
  }

  .footer-bottom {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .copyright {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
  }
</style>
