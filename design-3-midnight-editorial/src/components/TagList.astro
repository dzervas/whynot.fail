---
/**
 * Tag List component - displays clickable tag pills
 */
interface Props {
  tags: string[];
  class?: string;
}

const { tags, class: className = '' } = Astro.props;
---

{tags.length > 0 && (
  <ul class:list={['tag-list', className]}>
    {tags.map((tag) => (
      <li>
        <a href={`/tags/${tag.toLowerCase()}/`} class="tag">
          {tag}
        </a>
      </li>
    ))}
  </ul>
)}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: 0.8125rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--color-accent);
    background: var(--color-accent-bg);
    border: 1px solid var(--color-accent-border);
    border-radius: 4px;
    transition: all 0.15s ease;
  }

  .tag:hover {
    background: var(--color-accent);
    color: var(--color-bg);
    border-color: var(--color-accent);
  }
</style>
