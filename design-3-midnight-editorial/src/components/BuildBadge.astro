---
/**
 * CI Build Badge component
 * Midnight Editorial style: Elegant pill-shaped badges
 */
interface Props {
  status?: 'passing' | 'failing' | 'unknown';
}

const { status = 'unknown' } = Astro.props;

const statusConfig = {
  passing: { text: 'Passing', class: 'badge-passing' },
  failing: { text: 'Failing', class: 'badge-failing' },
  unknown: { text: 'Unknown', class: 'badge-unknown' },
};

const config = statusConfig[status];
---

<span class:list={['build-badge', config.class]}>
  <span class="badge-dot"></span>
  <span class="badge-text">{config.text}</span>
</span>

<style>
  .build-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    padding: 0.25rem 0.625rem 0.25rem 0.5rem;
    border-radius: 100px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .badge-passing .badge-dot {
    background: var(--color-success);
    box-shadow: 0 0 6px var(--color-success);
  }

  .badge-passing .badge-text {
    color: var(--color-success);
  }

  .badge-failing .badge-dot {
    background: var(--color-danger);
    box-shadow: 0 0 6px var(--color-danger);
  }

  .badge-failing .badge-text {
    color: var(--color-danger);
  }

  .badge-unknown .badge-dot {
    background: var(--color-warning);
    box-shadow: 0 0 6px var(--color-warning);
  }

  .badge-unknown .badge-text {
    color: var(--color-warning);
  }
</style>
